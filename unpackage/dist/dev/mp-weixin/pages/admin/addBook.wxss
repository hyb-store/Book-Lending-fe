.content {
  box-sizing: border-box;
  padding: 12rpx;
}
.content .row_line {
  display: flex;
  border-bottom: 1rpx solid #333333;
  padding: 20rpx 0;
  align-items: center;
}
.content .row_line .title {
  font-weight: bold;
  font-size: 32rpx;
  color: #222222;
}
.content .row_line .book_img {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #333333;
  text-align: center;
  line-height: 200rpx;
  margin-left: 20rpx;
}
.content .row_line .book_img image {
  width: 200rpx;
  height: 200rpx;
}
.content .row_line .row {
  flex-grow: 1;
  font-size: 28rpx;
  color: #222222;
  margin-left: 20rpx;
}
.content .row_line .textarea {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #222222;
  width: 500rpx;
  height: 200rpx;
  border: 1rpx solid #c0c0c0;
}
.content .button_box {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.content .button_box .button {
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  width: 350rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.content .button_box .submitBtn {
  background: #007aff;
}
.content .button_box .resetBtn {
  background: #4cd964;
}
.content .deleteBtn {
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  width: 350rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #ff6364;
  margin-top: 30rpx;
}

